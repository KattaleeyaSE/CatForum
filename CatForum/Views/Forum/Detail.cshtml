
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h1>Title</h1>
    </div>
    <div class="col-sm-12">
        <div class="text-center"><img width="500" src="~/Images/pic7.jpg"/></div>
        <div>
            <div><strong>Address: Chiang Mai, Muang, Suthep</strong> </div>
            <div><p class="help-block">Please adopt this cat!</p></div>
            <div><strong>Contact: 081-111-1111</strong> </div>
            <div>
                <ul>
                    <li><strong>Breed:</strong> Siamese</li>
                    <li><strong>Eyes Color:</strong> Brown</li>
                    <li><strong>Coat Color:</strong> Brown</li>
                    <li><strong>Coat Pattern:</strong> Stripped</li>
                    <li><strong>Tail:</strong> Long</li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        <button class="btn btn-block btn-success" data-toggle="modal" data-target="#toggleAdoption" >Request for Adoption</button>
    </div>
</div>

@* Model *@
<div class="modal fade" id="toggleAdoption" tabindex="-1" role="dialog" aria-labelledby="toggleAdoption">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Submit For Adoption!</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="DisplayName">Detail:</label>
                    <textarea class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label for="DisplayName">Contact:</label>
                    <input class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send</button>
            </div>
        </div>
    </div>
</div>


