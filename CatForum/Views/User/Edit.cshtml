
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <form class="form-horizontal" style="padding: 20px;">
            <div class="form-group text-center">
                <img width="200" height="200" src="~/Images/pic10.jpg" />
                <input type="file" id="exampleInputFile">
            </div>
            <p class="help-block">Upload your profile image here!</p>
            <div class="form-group">
                <label for="Username">Username</label>
                <input type="text" class="form-control" id="Username" placeholder="Username">
            </div>
            <div class="form-group">
                <label for="Password">Password</label>
                <input type="password" class="form-control" id="Password" placeholder="Password">
            </div>
            <div class="form-group">
                <label for="RePassword">Re-Password</label>
                <input type="password" class="form-control" id="RePassword" placeholder="Re-Password">
            </div>
            <div class="form-group">
                <label for="Email">E-Mail</label>
                <input type="email" class="form-control" id="Email" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="DisplayName">Display Name:</label>
                <input type="text" class="form-control" id="DisplayName" placeholder="Display Name">
            </div>
            <div class="form-group">
                <label>Gender</label>
                <select class="form-control" id="Province">
                    <option>Male</option>
                    <option>Female</option>
                </select>
            </div>
            <div class="form-group">
                <label>Address</label>
                <select class="form-control" id="Province">
                    <option>Chiang Mai</option>
                    <option>Chiang Rai</option>
                    <option>Bangkok</option>
                </select>
                <select class="form-control" id="Amphur">
                    <option>Muang</option>
                    <option>Hang Dong</option>
                    <option>Payathai</option>
                </select>
                <select class="form-control" id="Tumbon">
                    <option>Suthep</option>
                    <option>Santitum</option>
                    <option>Lad Phrao</option>
                </select>
            </div>
            <div class="alert alert-danger" role="alert">Please fill in your inforation!.</div>
            <div class="row">
                <div class="col-sm-6"><button type="submit" class="btn btn-block btn-success">Save</button></div>
                <div class="col-sm-6"><button type="submit" class="btn btn-block btn-warning">Reset</button></div>
            </div>
        </form>
    </div>
</div>

