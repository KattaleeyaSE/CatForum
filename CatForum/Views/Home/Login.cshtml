
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="padding-top: 20px;">
    <div class="col-sm-6 col-sm-offset-3">
        <form method="post" action="/Home/Login" id="login">
            <div class="form-group">
                <label for="Username">Username</label>
                <input type="text" class="form-control" id="Username" name="Username" placeholder="Username" required>
            </div>
            <div class="form-group">
                <label for="Password">Password</label>
                <input type="password" class="form-control" id="Password" name="Password" placeholder="Password" required>
            </div>
            <div class="row">
                <div class="col-sm-6"><button type="submit"  class="btn btn-block btn-success">Login</button></div>
                <div class="col-sm-6"><a href="/Home/Register" class="btn btn-block btn-warning">Register</a></div>
            </div>
        </form>
    </div>
</div>
@section scripts{
    <script>
        $("#login").validate({
            submitHandler: function (form) {
                form.submit();
            }
        });
    </script>
}